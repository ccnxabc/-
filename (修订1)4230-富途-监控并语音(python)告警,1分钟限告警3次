'stock(17)="601998"
'stock(18)="601318"
'stock(19)="601628"
'stock(20)="601336"
'stock(21)="601601"

Dim stock_name(2)
'stock_name(0)="工商银行"
'stock_name(1)="农业银行"
'stock_name(2) = "xxx"

stock_name(0)="农行HK"                                                                                          
